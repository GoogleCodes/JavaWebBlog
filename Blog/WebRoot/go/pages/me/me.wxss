/* pages/me.wxss */

page {
  background: #eee;
}

/* me start */

.fixed {
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
}

.me {
  background: #fff;
  height: 180px;
  width: 100%;
  overflow: hidden;
  position: relative;
}

.me .active {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 180px;
  transition: all 0.6s;
}

.scale {
  transform: scale(1.4);
}

.me .avatarUrl {
  width: 85px;
  height: 80px;
  margin: 0px auto;
  z-index: 10;
  position: absolute;
  top: 25px;
  left: 0px;
  right: 0px;
}

.me .avatarUrl image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}

.me .nickName {
  text-align: center;
  line-height: 40px;
  margin-top: 10px;
  position: absolute;
  top: 110px;
  right: 0px;
  left: 0px;
  margin: 0px auto;
}

/* me start */

/* tools start */

.tools {
  margin: 10px 0 0;
}

.tools .ul .li {
  background: #fff;
  height: 40px;
  line-height: 40px;
  padding: 0px 20px;
  color: #333;
  margin: 0px 0px 10px;
}

.tools .ul .li  .iconfont {
  margin-right: 10px;
  color: #333;
  font-size: 20px;
}

.tools .ul .li  .li_text {
  position: relative;
  top: -2px;
  font-size: 14px;
}

.tools .ul .li .li_service {
  margin-left: 10px;
}

/* hover_li start */

.tools .ul .hover_li {
  background: #ccc;
}

/* hover_li end */

/* tools end */
