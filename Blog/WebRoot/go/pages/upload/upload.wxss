
/* pages/upload/upload.wxss */

page {
  background: #f1f1f1;
}

/* tools_upload start */

.tools_upload {
  padding: 10px 10px 15px;
  overflow: hidden;
  background: #fff;
}

.tools_iamges {
  width: 100%;
  height: 100%;
  background: #fff;
  overflow: hidden;
  padding-bottom: 10px;
}

.tools_iamges .ul .ul_img {
  width: 21.1%;
  height: 100%;
  margin: 0px 0px 5px 10px;
}

.tools_iamges .ul .li {
  width: 21.1%;
  overflow: hidden;
  text-align: center;
  border: 1px solid #eee;
  margin: 0px 0px 5px 10px;
  line-height: 67px;
  font-size: 26px;
  color: #eee;
}

.tools_upload .ul .li img {
  margin: 0px;
}

 @media all and (max-width: 414px) {
  .tools_upload .ul .li {
    width: 23%;
    line-height: 80px;
  }
}

@media all and (max-width: 375px) {
  .tools_upload .ul .li {
    width: 23.3%;
    line-height: 80px;
  }
}

@media all and (max-width: 320px) {
  .tools_upload .ul .li {
    width: 23%;
    line-height: 67px;
  }
} 

.tools_upload .ul .li:nth-child(4n) {
  margin: 0px 0px 5px 0px;
}

.tools_upload .tools_textarea {
  width: 96%;
  height: 80px;
  font-size: 14px;
  color: #ccc;
  margin: 0px 0px 10px;
}

.tools_upload .tools_textarea .textarea {
  height: 80px;
  width: 100%;
}

/* tools_upload end */

/*  uploadBtn start */

.uploadBtn {
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 50px;
  background: #1aad16;
  border-radius: 0px;
  color: #fff;
  line-height: 50px;
  font-size: 14px;
  letter-spacing: 5px;
}

/*  uploadBtn end */



