/* message.wxss */


/* msg-main start */
.msg-main {
  margin: 0px 10px 20px;
  font-family: "microsoft yahei", Arial, sans-serif;
}

.msg-main .title {
  text-align: center;
  font-size: 16px;
}

.msg-main .thisDate {
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 12px;
}

.msg-main .desc {
  font-size: 12px;
  margin-top: 10px;
  line-height: 30px;
}

.msg-main .util {
  width: 90%;
  text-align: right;
  padding: 0px 5%;
}

.msg-main .util .icon-zan, .icon-athit-iconfont-message {
  font-size: 18px;
}

.msg-main .util .icon-zan {
  margin: 0px 30px 0px 0px;
}

/* msg-main end */